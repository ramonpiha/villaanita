---
import LanguageSwitcher from "./LanguageSwitcher.astro";
const { lang, title } = Astro.props;
---
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title} | Mountain B&B</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-bg text-brand font-sans antialiased">
  
  <header class="border-b border-brand/10 bg-white/70 backdrop-blur-sm sticky top-0 z-10">
    <nav class="max-w-5xl mx-auto p-4 flex justify-between items-center">
      <a href={`/${lang}/`} class="text-xl font-bold font-serif text-brand">
        Mountain B&B
      </a>

      <div class="hidden md:flex items-center gap-6">
        <a href={`/${lang}/`} class="text-brand/80 hover:text-brand transition-colors">Home</a>
        <a href={`/${lang}/gallery`} class="text-brand/80 hover:text-brand transition-colors">Gallery</a>
        <a href={`/${lang}/apartments`} class="text-brand/80 hover:text-brand transition-colors">Apartments</a>
        <a href={`/${lang}/rooms`} class="text-brand/80 hover:text-brand transition-colors">Rooms</a>
        <a href={`/${lang}/info`} class="text-brand/80 hover:text-brand transition-colors">Info</a>
        <a href={`/${lang}/contacts`} class="text-brand/80 hover:text-brand transition-colors">Contacts</a>
      </div>

      <LanguageSwitcher />
    </nav>
  </header>

  <main class="max-w-5xl mx-auto p-4 sm:p-6 lg:p-8">
    <slot />
  </main>

  <footer class="mt-16 py-8 border-t border-brand/10">
    <div class="max-w-5xl mx-auto px-4 text-center text-brand/60">
      <p>&copy; {new Date().getFullYear()} Mountain B&B. All rights reserved.</p>
      <p class="text-sm">A traditional home in the mountains.</p>
    </div>
  </footer>

</body>
</html>