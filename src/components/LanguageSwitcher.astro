---
const supported = ["en","it","de"];
---
<div class="flex gap-3">
  {supported.map(l => (
    <a 
      href={`/${l}/`} 
      onclick={`localStorage.setItem('bnb_lang', '${l}')`}
      class="lang-switcher-item"
    >
      {l}
    </a>
  ))}
</div>

<style>
  .lang-switcher-item {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(var(--charcoal-rgb, 60, 60, 60), 0.7);
    font-weight: 700;
    transition: color 0.2s ease-in-out;
    position: relative;
    padding: 0.25rem 0.5rem;
    padding-bottom: 0.375rem;
  }

  .lang-switcher-item::after {
    content: '';
    position: absolute;
    bottom: 0.125rem;
    left: 0.5rem;
    right: 0.5rem;
    height: 2px;
    background-color: currentColor;
    transform: scaleX(0);
    transition: transform 0.2s ease-in-out;
  }

  .lang-switcher-item:hover {
    color: var(--charcoal, #3c3c3c);
  }

  .lang-switcher-item:hover::after {
    transform: scaleX(1);
  }
</style>